{
  "manifest_version": 2,

  "name": "Gerrit Monitor with Groups",
  "description": "Monitor your CLs on Gerrit, now with groups!",
  "version": "1.0.0",

  "icons": {
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

  "permissions": [
    "alarms",
    "storage",
    "tabs"
  ],

  "optional_permissions": [
    "http://*/",
    "https://*/"
  ],

  "browser_action": {
    "default_icon": {
      "24": "img/ic_assignment_black_24dp_1x.png",
      "48": "img/ic_assignment_black_24dp_2x.png"
    },
    "default_title": "Unknown",
    "default_popup": "popup.html"
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "background": {
    "page": "background.html",
    "persistent": false
  }
}
